{% extends 'base1.html.twig' %}

{% block title %}categorie index{% endblock %}

{% block body %}
    <h1>categorie index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                                <th>Icone</th>

                <th>Nom</th>
                <th>Description</th>
                <th>Note</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                   <td><img src="{{ asset('uploads/category_icone/' ~ categorie.icone) }}" class="rounded-circle" style="width: 100px; height:100px" /></td>
                <td>{{ categorie.nom }}</td>
                
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.note }}</td>

                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
