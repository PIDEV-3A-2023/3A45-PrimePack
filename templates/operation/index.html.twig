{% extends 'front/base.html.twig' %} 

{% block title %}Operation index{% endblock %}

{% block body %}
<style>
  .mon-espace {
    margin: 20px;
  }
</style>

    <h1 class="mon-espace">LISTE DES OPERATIONS</h1>


    <section class="items-product1 pt-30">
        <div class="container">
            <div class="row">

                <input  id="myInput"  type="text" placeholder="search">
                <section class="items-product1 pt-30">
        <div class="container">
            
                <table class="table table-bordered" id="t"  width="100%" cellspacing="0">
                    <thead>
                    <tr>



                        <th>TYPE DE L'OPERATION</th>
                        <th>NOM DU MEDECIN</th>
                        <th>COUT</th>
                        <th>NOTES</th>
                    </tr>
                    </thead>

                    <tbody id="myTable">
                    {% for operation in operations %}
                        <tr>


                            <td>{{ operation.type_operation }}</td>
                            <td>{{ operation.nom_medecin }}</td>
                            <td>{{ operation.cout_operation }}</td>
                            <td>{{ operation.note_operation }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tbody id="search">
                    </tbody>
                </table>

            </div>
        </div>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>






{% endblock %}
