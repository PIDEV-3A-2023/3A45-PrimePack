{% extends 'base1.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <h1> Liste des RendezVous : {{ rendez_vouses.getTotalItemCount }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Duree</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.date |date('d-m-Y')}}</td>
                <td>{{ rendez_vou.duree }}</td>
                <td>
                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}"> <button class="btn btn-outline-primary" > update</button></a>
                    <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}"><button class="btn btn-outline-primary" > show</button></a>
                    <a href="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}"><button class="btn btn-outline-primary" > delete</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(rendez_vouses) }}


{% endblock %}